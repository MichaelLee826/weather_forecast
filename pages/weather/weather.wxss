/*最近3天天气图标*/

.forecastIcon {
  margin: 0 auto;
  display: flex;
  justify-content: center;
  overflow: hidden;
  width: 80rpx;
  height: 80rpx;
}

/*每一天的天气*/

.next-day {
  width: 30%;
  height: 430rpx;
  text-align: center;
  line-height: 30px;
  font-size: 16px;
  margin: 0 10rpx;
  border: 2px solid #043567;
  border-radius: 10rpx;
  box-shadow: 10px 10px 5px #888;
}

/*日期*/

.date {
  margin-bottom: 20rpx;
  border-bottom: 1px solid #043567;
  color: #fff;
}

/*指数块*/

.tips {
  width: 90%;
  padding: 10rpx;
  margin: 30rpx auto;
  border-radius: 10rpx;
  border: 2px solid #043567;
  box-shadow: 10px 10px 5px #888;
}

/*指数文字*/

.index {
  color: #fff;
  font-weight: bold;
  margin: 5px 0;
}

/*描述*/

.description {
  line-height: 22px;
  margin: 5px 0;
}

/*搜索区域*/

.search-area {
  display: flex;
  margin-top: 300rpx;
  padding: 1rem 0.5rem;
}

/*输入框*/

.search-area input {
  width: 60%;
  height: 38px;
  line-height: 38px;
  border: 1px solid #ccc;
  box-shadow: 3px 3px 6px 0px #ccc;
  color: #000;
  background-color: #fff;
  border-radius: 5px;
  margin: 0 auto;
  display: flex;
  padding-left: 30rpx;
}

/*按钮*/

.search-area button {
  width: 20%;
  height: 40px;
  line-height: 40px;
  margin-left: 2rpx;
}

/*小时预报*/
.scroll_box {
  width: 100%;
  height: 180rpx;
  margin-top: 450rpx;
  overflow: hidden;
  padding-top: 10rpx;
  padding-left: 10rpx;
  padding-right: 20rpx;
  white-space: nowrap;
  border-top: 2px solid #fff;
  border-bottom: 2px solid #fff;
}

/*小时预报*/

.scroll_box scroll-view {
  height: 100%;
  width: 100%;
  overflow: hidden;
}

/*小时预报*/

.item_list {
  width: 150rpx;
  height: 100%;
  margin-right: 10px;
  display: inline-block;
  text-align: center;
  font-size: 16px;
  font-weight: bold;
}

/*未来6天预报*/
.forecast {
  width: 100%;
  height: 200rpx;
  margin-top: 30rpx;
  font-weight: bold
}

.item {
  width: 690rpx;
  height: 80rpx;
  padding-left: 30rpx;
  display: flex;
  justify-content: center;
}
